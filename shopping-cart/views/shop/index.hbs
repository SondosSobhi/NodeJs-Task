<div class="row">
  {{# each products }}

      <div class="col-sm-12 col-md-4">

         <div class="thumbnail">

            <img src="{{this.imagePath}}">

            <div class="caption">

              <h3>{{this.title}}</h3>

              <p>{{this.description}}</p>

               <div class="clearfix">

                  <div class="price">{{this.price}}$</div>

                  <a href="/add-to-cart/{{this._id}}" style="float:right" class="btn btn-success">Add to Shopping Cart</a>

               </div>

            </div>

         </div>

      </div>

  {{/each}}

</div>