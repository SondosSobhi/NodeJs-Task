<div class="row">
    <div class="col-md-8 col-md-offset-2">

        <h1>User Profile</h1>
        <hr>
        <h2>My Order</h2>

        {{# each order }}

            <div class="panel panel-default">
                <div class="panel-body">
                    <ul class="list-group">
                    {{#each cart.items}}
                        <li class="list-group-item">
                            <span class="badge">{{this.price}}$</span>
                            {{this.item.title}} | {{this.qty}} Unit
                        </li>
                    {{/each}}
                    </ul>
                </div>
                <div class="panel-footer">
                    <strong>Total Price: {{cart.totalPrice}}$</strong>
                </div>
            </div>

        {{/each}}


    </div>
</div>
